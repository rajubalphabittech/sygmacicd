@using System.Web.Hosting
@model atm.services.models.Menu

<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#menulinks' aria-expanded='false'>
				<span class='sr-only'>Toggle navigation</span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
				<span class='icon-bar'></span>
			</button>
			@Html.ActionLink(Model.Title, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		</div>
		<div class="navbar-collapse collapse" id="menulinks">
			<ul class="nav navbar-nav">
				@foreach (var app in Model.Sections.OrderBy(m => m.DisplayOrder))
				{
					<li class="dropdown">
						<a class="dropdown-toggle"
							 data-toggle="dropdown"
							 role="button"
							 aria-haspopup="true"
							 aria-expanded="false">@app.SectionDescription<span class="caret"></span></a>


							<ul class="dropdown-menu">
								@foreach (var func in app.MenuItems.OrderBy(mi => mi.DisplayOrder))
								{
								<li>
									<a href="@Href(func.RootUrl)" target="_self">@func.FunctionDescription</a>
								</li>
								}
							</ul>
						</li>
					}
			</ul>
		</div>
	</div>
</div>