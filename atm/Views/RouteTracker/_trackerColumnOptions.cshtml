        </div>
        <div class="inlineBlock" style="width: 60px; text-align: center; vertical-align: top;">
            <a id="stopColumnMoveRight" class="fa fa-angle-right fa-lg btn btn-default column-option-dialog-button" aria-hidden="true"></a> 
            <a id="stopColumnMoveAllRight" class="fa fa-angle-double-right fa-lg btn btn-default column-option-dialog-button" aria-hidden="true"></a>
            <a id="stopColumnMoveLeft" class="fa fa-angle-left fa-lg btn btn-default column-option-dialog-button" aria-hidden="true"></a>
        </div>
        <div class="inlineBlock" style="width: 200px; vertical-align: top;">
            @Html.ListBox("stopSelectedColumns", new SelectList(Model.StopColumnOption.Columns.OrderBy(x => int.Parse(x.DisplayOrder)), "ID", "ColumnIdentifier"), new { @class = "column-options-dialog-listbox", multiple = "multiple" })
        </div>
        <div class="inlineBlock column-option-dialog-move-button-frame">
            <a id="stopColumnMoveUp" class="fa fa-angle-up fa-lg btn btn-default column-option-dialog-button" aria-hidden="true"></a> 
            <a id="stopColumnMoveDown" class="fa fa-angle-down fa-lg btn btn-default column-option-dialog-button" aria-hidden="true"></a> 
        </div>
    </div>
</div>